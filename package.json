{
  "name": "@gabliam/typeorm",
  "version": "2.2.0",
  "description": "",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "precommit": "lint-staged",
    "build-test": "npm run build",
    "build": "rimraf lib && npm run lint && tsc -p tsconfig.build.json",
    "prepublish": "publish-please guard",
    "prettier": "prettier --single-quote --write --parser typescript {src,test}/**/*.ts",
    "lint": "tslint --type-check --project tsconfig.json '{src,test}/**/*.ts'",
    "test": "jest",
    "publish-please": "publish-please"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/interface.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage_jest_raw",
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*)\\.test\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write --parser typescript",
      "tslint --type-check --project tsconfig.json",
      "git add"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabliam/typeorm.git"
  },
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabliam/typeorm/issues"
  },
  "homepage": "https://github.com/gabliam/typeorm#readme",
  "peerDependencies": {
    "@gabliam/core": "^2.1.0"
  },
  "dependencies": {
    "caller": "^1.0.1",
    "debug": "^2.6.1",
    "typeorm": "0.0.8"
  },
  "devDependencies": {
    "@gabliam/core": "^2.1.0",
    "@types/debug": "^0.0.29",
    "@types/jest": "^20.0.7",
    "@types/joi": "^10.3.0",
    "@types/node": "^8.0.24",
    "@types/reflect-metadata": "^0.0.5",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "joi": "^10.2.2",
    "lint-staged": "^4.0.1",
    "prettier": "^1.5.2",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.10",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.0",
    "sqlite3": "^3.1.9",
    "ts-jest": "^20.0.10",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.4.1",
    "vrsource-tslint-rules": "^5.1.0"
  }
}
