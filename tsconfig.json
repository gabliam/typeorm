{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "outDir": "lib"
    }
}
